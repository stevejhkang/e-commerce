<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shop.UserMapper">
    <insert id="createUser" parameterType="UserDto">
        INSERT INTO shop.users
        (
            user_id
            ,password
            ,name
            ,phone_number
            ,user_type
        )
        VALUES
        (
            #{userId}
            ,#{password}
            ,#{name}
            ,#{phoneNumber}
            ,#{userType}
        )
    </insert>

    <select id="findUserByIdAndPassword" parameterType="UserDto" resultType="UserDto">
        SELECT *
        FROM shop.users
        WHERE
            user_id = #{userId}
                AND
            password = #{password}
    </select>

    <select id="findUserByUserSn" parameterType="integer" resultType="UserDto">
        SELECT *
        FROM shop.users
        WHERE
            user_sn = #{userSn}
    </select>

    <select id="findUserByUserId" parameterType="string" resultType="UserDto">
        SELECT *
        FROM shop.users
        WHERE
            user_id = #{userId}
    </select>

    <select id="findUserByName" parameterType="string" resultType="UserDto">
        SELECT *
        FROM shop.users
        WHERE
            name = #{name}
    </select>

</mapper>